<li id="post-<%= post.id %>">
  <%= image_tag(post.author.image, class: 'post-img') %>
  <span class="author"><%= link_to post.author.name, author_posts_path(post.author) %> </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    From <%= post.author.provider %>.
  </span>
  <a href="javascript:;" onclick="comments.toggleForm(this); return false;" class="post-reply">Reply</a>
  <span class="post-body"><%= post.body %></span>
  <% if post.comments.any? %>
    <% post.comments.each do |comment| %>
      <div id="comment-<%= comment.id %>">
        <span class="body"><%= comment.body %></span>
        <div class="comment-footer">
          <span class="comment-author">Said</span>
          <%= link_to comment.author.name, author_posts_path(comment.author) %>
          <span><%= time_ago_in_words(post.created_at) %> ago.</span>
          <a href="javascript:;" onclick="comments.toggleForm(this); return false;" class="comment-reply">Reply</a>
        </div>
      </div>
    <% end %>
  <% end %>
</li>
