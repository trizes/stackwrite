<div id="comment-<%= comment.id %>">
  <span class="body"><%= comment.body %></span>
  <div class="comment-footer">
    <span class="comment-author">Said</span>
    <%= link_to comment.author.name, author_posts_path(comment.author) %>
    <span><%= time_ago_in_words(comment.created_at) %> ago.</span>
    <% if @current_author %>
      <a href="javascript:;" onclick="comments.toggleForm(this)" class="comment-reply">Reply</a>
      <%= render partial: "/comments/reply_form", locals: { comment: comment } %>
    <% end %>
  </div>
</div>
<% if @comments[comment.id] %>
  <ul>
    <li>
      <%= render partial: 'comments/comment', collection: @comments[comment.id] %>
    </li>
  </ul>
<% end %>